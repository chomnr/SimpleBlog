@page "/account/login"
@using Application.Features.BlogUser
@using MediatR
@using Microsoft.AspNetCore.Antiforgery
@inject IMediator Mediator

<h1>Login</h1>

<EditForm Model="@LoginModel" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label for="username">Email</label>
        <InputText id="username" class="form-control" @bind-Value="LoginModel.Login" />
        <ValidationMessage For="@(() => LoginModel.Login)" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <InputText id="password" class="form-control" type="password" @bind-Value="LoginModel.Password" />
        <ValidationMessage For="@(() => LoginModel.Password)" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

@code {
    private LoginCommand LoginModel { get; set; } = new LoginCommand();

    private async Task HandleValidSubmit()
    {
        LoginModel.RememberMe = true;
        var result = await Mediator.Send(LoginModel);
        Console.WriteLine(result);
    }
}
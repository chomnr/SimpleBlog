@page
@model Web.Areas.Post.Pages.Create

@{
    Layout = "_Layout";
}

<head>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>
<section class="custom-section" style="
            justify-content: start;
            height: 100vh;
            align-items: center;
            flex-direction: column;">
    <div class="child-node" style="flex-direction: column;max-width: 900px">
        <div id="editor" style="text-align: center;border: 0">
            <p>Write something great!</p>
        </div>
    </div>
</section>

<style>
    .ql-container.ql-snow { border: none !important;}
</style>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
    const toolbarOptions = [
        [{ 'header': [1, 2, false] }, { 'font': [] }],
            ['bold', 'italic', 'underline', 'strike', 'blockquote'],
            [{'list': 'ordered'}, {'list': 'bullet'}, 
             {'indent': '-1'}, {'indent': '+1'}],
            ['link', 'image', 'video', 'code'],
            ['clean']                                        
    ];

   var quill = new Quill('#editor', {
     modules: {
       toolbar: toolbarOptions
     },
     theme: 'snow'
   })

</script>


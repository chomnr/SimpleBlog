@page "/auth/login"
@using Web.Areas.Account.Pages;
@using Application.Entities;
@model MediatorLoginModel<BlogUser>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

@Html.AntiForgeryToken()
<section class="blg-section" style="padding-left: 25px;padding-right: 25px;height: 100vh">
    <div class="blg-child-node col" style="color: #eae7e1;justify-content: center;align-items: center;">
        <form id="loginForm" method="post" style="width: 270px;">
            <h3 style="font-weight: lighter;margin-bottom: 12px;">Login</h3>
            <div style="display: flex;flex-direction: column;gap: 12px;">
                <div class="group">
                    <span asp-validation-for="Input.Login" style="font-size: 0.6em;"></span>
                    <span asp-validation-for="Input.Password" style="font-size: 0.6em;"></span>
                    <div asp-validation-summary="ModelOnly" style="font-size: 0.6em;"></div>
                </div>
                <div class="group">
                    <label>Username or Email</label>
                    <input asp-for="Input.Login" placeholder="Username or Email" type="text"/>
                </div>
                <div class="group">
                    <label>Password</label>
                    <input asp-for="Input.Password" placeholder="Password" type="password"/>
                </div>
                <div class="group" style="width: fit-content;flex-direction: row;align-items: center;gap: 5px;">
                    @Html.CheckBox("RememberMe")
                    <label style="font-size: 0.7rem;">Remember</label>
                </div>
                <div class="group">
                    <button id="loginSubmit" type="submit">Login</button>
                </div>
                <div class="group">
                    <label style="font-size: 0.8em;">Forgot your password? <a href="/account/recovery" style="color: var(--primary-color);">Reset Password</a></label>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@using System.Reflection.Metadata
@using Web.Areas.Account.Pages;
@using Application.Entities;
@model MediatorRegisterModel<BlogUser>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

@Html.AntiForgeryToken();
<section class="custom-section" style="
            justify-content: center;
            height: 100vh;
            align-items: center;
            flex-direction: column">
    <div class="lds-dual-ring" style="display: none;"><div></div></div>
    <form id="registerForm" class="custom-form"  style="
            background: var(--white);
            display: flex; 
            align-items: center" method="post">
        <h3>Create an Account</h3>
        <span class="subtitle">Enter your credentials to access your account.</span>
        <div class="form-spacer"></div>
        <div class="custom-form-group">
            <i class="fa-solid fa-user custom-input-icon" style="color: var(--blue-light)"></i>
            <input asp-for="Input.Username" name="Username" class="custom-input icon-supp" placeholder="Username" type="text"/>
        </div>
        <div class="custom-form-group">
            <i class="fa-solid fa-envelope custom-input-icon" style="color: var(--blue-light)"></i>
            <input asp-for="Input.Email" name="Email" class="custom-input icon-supp" placeholder="Email" type="email"/>
        </div>
        <div class="custom-form-group">
            <i id="password" class="fa-solid fa-lock custom-input-icon" style="color: var(--blue-light)"></i>
            <input asp-for="Input.Password" name="Password" onkeyup="checkForMatch()" class="custom-input icon-supp" placeholder="Password" type="password"/>
        </div>
        <div class="custom-form-group">
            <i id="dynamic_icon_label" class="fa-solid fa-x custom-input-icon" style="color: var(--blue-light)"></i>
            <input asp-for="Input.ConfirmPassword" onkeyup="checkForMatch()" name="ConfirmPassword" class="custom-input icon-supp" placeholder="Confirm Password" type="password"/>
        </div>
        <div class="custom-form-group">
            <button class="custom-button default" id="loginSubmit"  type="submit">Register</button>
        </div>
    </form>

    <p style="padding-top: 3rem;font-size: 0.8em;">Forgot your password? <a href="/account/reset_password" style="color: var(--blue-light)">Reset Password</a></p>
</section>
 
<script>
    var password = document.getElementById("Input_Password");
    var confirmpassword = document.getElementById("Input_ConfirmPassword")
    var icon = document.getElementById("dynamic_icon_label")
    function checkForMatch(){
        if (password.value === confirmpassword.value) {
            icon.classList.remove("fa-x");
            icon.classList.add("fa-check");
         } else { 
            icon.classList.remove("fa-check");
            icon.classList.add("fa-x");
         }
    }
</script>f
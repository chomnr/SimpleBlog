@page
@model Web.Areas.Account.Pages.Register.RegisterConfirmationModel<Application.Entities.BlogUser>

@{
    Layout = "_Layout";
}
<section class="blg-section" style="padding-left: 25px;padding-right: 25px;height: 100vh;margin-top: 25px">
    <div class="blg-child-node col" style="color: #eae7e1;align-items: center;">
        <div style="padding: 15px;border-radius: 50%;display: flex;align-items: center;">
            <i class="fa-solid fa-check" style="font-size: 2rem;"></i>
        </div>
        <div style="text-align:center;font-size: 1.3rem;"><b>Your account has successfully been created</b></div>
        <br>
        <p style="max-width:500px;text-align:center;">To be able to login to your account, please confirm your account by 
            clicking on the verification link sent to your email. </p>
        <br>
        <button style="width: 150px;"><a href="~/" style="color:inherit;text-decoration: none;">GO TO WEBSITE</a></button>
    </div>
</section>